<div class="container">
<h1>Recipes</h1>
<div class="row">
  <% @recipes.each do |recipe| %>
<div class="col-md-4">
  <div class="recipe-box">
    <ul>
      <h4><%= recipe.title %></h4>
      <%= recipe.description %><br>
      <%= link_to 'View Recipe', recipe %>
    </ul>
  </div>
</div>
  <% end %>
  <% if !current_user %>
    <%= link_to "Sign In to create a Recipe", new_user_session_path %>
  <% end %>
