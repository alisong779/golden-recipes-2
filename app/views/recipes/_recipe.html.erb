<h2 id="name"><%= @recipe.title %></h2>


<strong>Directions:</strong>
    <% @recipe.directions.each do |direction| %><br>
      <%= direction.step %>
    <% end %>
<br>
<br>
<strong>Ingredients:</strong>
<ul>
  <% @recipe.recipe_ingredients.each do |ri| %>
    <li><%= ri.quantity %> <%= ri.unit %> - <%= ri.ingredient.name %></li>
  <% end %>
</ul>
