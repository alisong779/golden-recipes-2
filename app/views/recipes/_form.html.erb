<h1>Create A New Recipe</h1>
<%= form_for @recipe do |f| %>
<div class="form-group">

  <%= f.label :title %>
  <%= f.text_field :title %><br />
  <%= f.label :description %>
  <%= f.text_field :description%><br />

    <div class="panel-body">

      <div class="row">
        <div class="col-md-6">
          <h3>Ingredients</h3>
          <div id="ingredients">
            <%= f.fields_for :ingredients do |ingredient| %>
              <%= ingredient.label :name %>
              <%= ingredient.text_field :name %>
            <% end %>
            <div class="links">
              <%= link_to 'Add Ingredient', new_ingredient_path, class: "btn btn-default add-button" %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <h3>Directions</h3>
          <div id="directions">
            <%= f.fields_for :directions do |direction| %>
              <%= render 'directions' %>
            <% end %>
            <div class="links">
              <%= link_to 'Add Step', new_direction_path, class: "btn btn-default add-button" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= f.button :Submit, class: "btn btn-primary" %>
  <% end %>
