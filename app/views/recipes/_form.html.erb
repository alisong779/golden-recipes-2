<%= form_for @recipe do |f| %>
  <% if @recipe.errors.any? %>
      <p>
        <%= @recipe.errors.count %>
        Prevented this recipe froms saving
      </p>
      <ul>
        <% @recipe.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
<br>
  <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>


  <h4>Ingredients:</h4>
    <div class="form-row">
      <%= f.fields_for :recipe_ingredients, @recipe_ingredient do |ri| %>
    <div class="form-group col-md-4">
        <%= ri.label :quantity %>
        <%= ri.number_field :quantity, class: 'form-control' %>
    </div>
    <div class="form-group col-md-4">
        <%= ri.label :unit %>
        <%= ri.text_field :unit, class: 'form-control' %>
  </div>
  <div class="form-group col-md-4">
        <%= ri.fields_for :ingredient, @recipe_ingredient.build_ingredient do |i| %>
          <%= i.label :name %>
          <%= i.text_field :name, class: 'form-control' %><br>
    </div>
        <% end %>
      <% end %>

  <div class="form-group col-md-4">
      <h4>Directions:</h4>
        <%= f.fields_for :directions, @direction do |direction| %>
          <%= direction.label :step %>
          <%= direction.text_field :step, class: 'form-control'%>
        <% end %>
    </div>
  </div>
      <%= f.submit "Create Recipe", class: 'btn btn-primary' %>
  <% end %>
