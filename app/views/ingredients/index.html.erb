<h1>Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% if current_page?(ingredients_path) %>
  <%= link_to 'New Ingredient', new_ingredient_path %>
<% elsif current_page?(recipe_ingredients_path) %>
  <%= link_to 'Add Ingredient to this Recipe', new_recipe_ingredient_path %>
<% end %>
